{
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
			"default": null
		},
		"machineClass": {
			"type": "string",
			"default": "MasterSlave"
		},
		"name": {
			"type": "string",
			"validationMessage": "Name is required.",
			"localizedValidationMessage": "name-error"
		},
		"comment": {
			"type": "string",
			"default": ""
		},
		"config": {
			"type": "object",
			"properties": {
				"master": {
					"type": "string",
					"validationMessage": "Device is required",
					"localizedValidationMessage": "choose-device"
				},
				"meter": {
					"type": "integer",
					"default": 2
				},
				"threshold": {
					"type": "integer",
					"default": 25,
					"minimum": 1,
					"maximum": 3600,
					"validationMessage": "Threshold has to be a valid integer.",
					"localizedValidationMessage": "no-u32number-watt"
				},
				"slaves": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"device": {
								"type" : "string",
								"validationMessage": "Device is required",
								"localizedValidationMessage": "choose-unique-device"
							}
						},
						"required": [
							"device"
						]
					}
				},
				"relais": {
					"type": "integer",
					"default": 1
				}
			},
			"required": [
				"master",
				"meter",
				"threshold",
				"slaves",
				"relais"
			]
		}
	},
	"required": [
		"name",
		"config"
	]
}

